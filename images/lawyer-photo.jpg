    <circle cx="0" cy="-280" r="80" fill="#ffffff" opacity="0.2"/>
    
    <!-- Body -->
    <rect x="-90" y="-180" width="180" height="240" rx="10" fill="#ffffff" opacity="0.2"/>
    
    <!-- Arms -->
    <rect x="-150" y="-160" width="60" height="200" rx="10" fill="#ffffff" opacity="0.15"/>
    <rect x="90" y="-160" width="60" height="200" rx="10" fill="#ffffff" opacity="0.15"/>
  </g>
  
  <!-- Text -->
  <text x="400" y="900" font-family="Arial, sans-serif" font-size="32" fill="#ffffff" text-anchor="middle" opacity="0.4">
    Фото адвоката
  </text>
  <text x="400" y="950" font-family="Arial, sans-serif" font-size="20" fill="#ffffff" text-anchor="middle" opacity="0.3">
    Замените на свое фото
  </text>
  <text x="400" y="990" font-family="Arial, sans-serif" font-size="18" fill="#ffffff" text-anchor="middle" opacity="0.3">
    Рекомендуемый размер: 800x1067px
  </text>
</svg>
